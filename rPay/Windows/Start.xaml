<Window x:Class="rPay.Windows.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rPay.Windows"
        mc:Ignorable="d"
        Title="Start" Height="470" MaxHeight="470" MinHeight="470" Width="810" MaxWidth="810" MinWidth="810">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="404" Margin="10,20,0,0" VerticalAlignment="Top" Width="390">
            <Button x:Name="createOrder" Content="Создать платёж" FontSize="16" HorizontalAlignment="Left" Height="49" Margin="10,71,0,0" VerticalAlignment="Top" Width="142" Click="createOrder_Click"/>
            <Button x:Name="statusQRdynamic" Content="Статус платежа" FontSize="16" HorizontalAlignment="Left" Height="49" Margin="10,179,0,0" VerticalAlignment="Top" Width="142" Click="statusQRdynamic_Click"/>
            <Button x:Name="returnPay" Content="Вернуть пациенту" FontSize="16" HorizontalAlignment="Left" Height="49" Margin="10,125,0,0" VerticalAlignment="Top" Width="142" Click="returnPay_Click"/>
            <Label x:Name="fioUser" FontSize="30" HorizontalContentAlignment="Center" Content="" HorizontalAlignment="Left" Height="56" Margin="10,10,0,0" VerticalAlignment="Top" Width="276" FontWeight="Bold" />
            <Button Content="ВЫХОД" FontSize="25" HorizontalAlignment="Left" Height="44" Margin="10,350,0,0" VerticalAlignment="Top" Width="138" Click="Button_Click"/>

        </Grid>
        <Grid HorizontalAlignment="Left" Height="202" Margin="405,20,0,0" VerticalAlignment="Top" Width="385">
            <Button x:Name="userList" Content="Пользователи" FontSize="30" HorizontalAlignment="Center" Height="60" Margin="0,10,0,0" VerticalAlignment="Top" Width="365" Click="userList_Click"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="197" Margin="405,227,0,0" VerticalAlignment="Top" Width="385">
            <Button x:Name="deletOrder" Content="Удалить платеж" FontSize="25" HorizontalAlignment="Center" Height="52" Margin="0,10,0,0" VerticalAlignment="Top" Width="365" Click="deletOrder_Click"/>
        </Grid>


    </Grid>
</Window>
